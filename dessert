<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MBTI Carnival Shooting Game</title>
  <style>
    body { font-family: Arial, sans-serif; text-align: center; background: #fef9e7; }
    .screen { display: none; margin-top: 50px; }
    .active { display: block; }
    button { margin: 10px; padding: 15px 25px; font-size: 18px; border-radius: 8px; cursor: pointer; }
    #resultScreen { font-size: 24px; font-weight: bold; margin-top: 40px; }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
</head>
<body>
  <h1>MBTI Carnival Game ðŸŽ¯</h1>
  
  <div id="questionScreen"></div>
  
  <div id="answerButtons" class="screen">
    <button onclick="answer(1)">1. Strongly Agree</button>
    <button onclick="answer(2)">2. Agree</button>
    <button onclick="answer(3)">3. Disagree</button>
    <button onclick="answer(4)">4. Strongly Disagree</button>
  </div>
  
  <div id="resultScreen" class="screen">
    <p id="resultText"></p>
    <p>Press "H" to reset the game.</p>
  </div>

  <script>
    // --- Question Setup ---
    const questions = [
      { text: "I enjoy social gatherings and feel energized being around many people.", letters: ["E","I"] },
      { text: "I prefer to focus on facts, details, and practical information rather than ideas or theories.", letters: ["S","N"] },
      { text: "When making decisions, I rely more on objective logic than personal feelings or values.", letters: ["T","F"] },
      { text: "I like to have a clear plan and structure rather than being spontaneous and flexible.", letters: ["J","P"] }
    ];

    let currentQuestion = 0;
    let scores = { I:0, E:0, S:0, N:0, T:0, F:0, J:0, P:0 };

    function showQuestion() {
      if(currentQuestion < questions.length) {
        document.getElementById("resultScreen").classList.remove("active");
        document.getElementById("questionScreen").innerHTML = `<h2>Q${currentQuestion+1}: ${questions[currentQuestion].text}</h2>`;
        document.getElementById("answerButtons").classList.add("active");
      } else {
        showResult();
      }
    }

    function answer(choice){
      const q = questions[currentQuestion];
      if(choice === 1){ scores[q.letters[0]] += 2; } // Strongly Agree
      if(choice === 2){ scores[q.letters[0]] += 1; } // Agree
      if(choice === 3){ scores[q.letters[1]] += 1; } // Disagree
      if(choice === 4){ scores[q.letters[1]] += 2; } // Strongly Disagree
      currentQuestion++;
      showQuestion();
    }

    function showResult(){
      let finalType = "";
      for(let q of questions){
        finalType += scores[q.letters[0]] >= scores[q.letters[1]] ? q.letters[0] : q.letters[1];
      }
      document.getElementById("answerButtons").classList.remove("active");
      document.getElementById("questionScreen").innerHTML = "";
      document.getElementById("resultText").innerText = `Your MBTI Type: ${finalType}`;
      document.getElementById("resultScreen").classList.add("active");

      // Confetti carnival effect ðŸŽ‰
      confetti({
        particleCount: 150,
        spread: 70,
        origin: { y: 0.6 }
      });
    }

    function resetGame(){
      currentQuestion = 0;
      scores = { I:0, E:0, S:0, N:0, T:0, F:0, J:0, P:0 };
      document.getElementById("resultScreen").classList.remove("active");
      showQuestion();
    }

    // Keyboard navigation
    document.addEventListener("keydown", function(event){
      if(event.key === "ArrowRight" && currentQuestion < questions.length){
        // move forward only if a question is showing
        showQuestion();
      }
      if(event.key === "ArrowLeft" && currentQuestion > 0){
        currentQuestion--;
        showQuestion();
      }
      if(event.key.toLowerCase() === "h"){
        resetGame();
      }
    });

    // Start game on load
    window.onload = showQuestion;
  </script>
</body>
</html>
